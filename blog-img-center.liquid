

<div class="blog__img">
  {%- if section.settings.title !=blank -%}
  <h2 class="title-h2 blog__img__title">
    {{ section.settings.title }}
  </h2>
  {%- endif -%}
  <div class="blog__center__img">
    {%- for block in section.blocks -%}
      <div class="img__center">
        <img class="img__center__img" src="{% assign shopify_cdn_url =  block.settings.image | img_url: 'master'  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="">
        <div class="img__center__header">
          <h3 class="title-h4 img__center__name">
            {{ block.settings.title }}
          </h3>
          {%- if block.settings.ig != blank -%}
            <a class="img__center__ig" href="{{ block.settings.ig }}" target="_blank">
              <img src="{% assign shopify_cdn_url =  'instagram.svg' | asset_url  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="Instagram" style="width:24px; height:24px;">
            </a>
          {%- endif -%}
        </div>
        <span class="title-h5 img__center__span">
          {{ block.settings.span }}
        </span>
        
     
        {%- if block.settings.favourite != blank -%}
          {% assign favourite = all_products[block.settings.favourite] %}
          <a class="img__center__link link" href="{{ favourite.url }}" target="_blank">
              {% assign cta_title = block.settings.title | split: " " | first %}
            {{ cta_title }}'s favorite product
          </a>
        {%- endif -%}
        
        {%- if block.settings.center-btn != blank -%}
            <button class="center-btn">
              <a class="btn-text" href="{{ block.settings.center-btn-link }}">{{ block.settings.center-btn }}</a>
            </button>
         {%- endif -%} 
        
      </div>
    
     <p class=" img__center__quote">
          {{ block.settings.body-text }}
        </p>
    
    
    
    {%- endfor -%}
  </div>
</div>

