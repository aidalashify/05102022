{% for block in section.blocks %}


<div class="about__cta" id="about">
  <div class="about__cta__img-container--mobile">
      <img class="about__cta__img about__cta__img--mobile" src="{% assign shopify_cdn_url =  block.settings.image_mobile | img_url: 'master'  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="">
  </div>

  <div class="about__cta__content">
    <span class="about__cta__lead">
      {{ block.settings.lead }}
    </span>
    <h2 class="about__cta__title">
      {{ block.settings.title }}
    </h2>
    <p class="about__cta__text">
      {{ block.settings.text }}
    </p>
    <a class="button about__cta__btn" href="{{ block.settings.link_url }}">
      {{ block.settings.link_label }}
    </a>
  </div>

  <div class="about__cta__img-container">
   <img class="about__cta__img about__cta__img--desktop" src="{% assign shopify_cdn_url =  block.settings.image_desktop | img_url: 'master'  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="">
  </div>
</div>

{% endfor %}

<style>
  
   @font-face {
      font-family: 'wide';
      src: url(https://cdn.shopify.com/s/files/1/1832/9335/files/GraphikWide-Regular.woff2?v=1627450731);
    }

   @font-face {
      font-family: 'Graphik Regular';
      src: url(https://cdn.shopify.com/s/files/1/1832/9335/files/Graphik-Regular.eot?v=1627450732);
    }
  

.about__cta {
	-ms-flex-align: center;
	align-items: center;
	display: -ms-flexbox;
	display: flex;
	margin: auto;
	max-width: 1100px;
	padding: 50px;
}


@media (max-width: 798px) {
	.about__cta {
		display: block;
		padding: 75px 20px;
	}
}
.about__cta:first-child {
	padding-top: 0px;
}
.about__cta:nth-child(2n) {
	-ms-flex-direction: row-reverse;
	flex-direction: row-reverse;
	margin-top: 10px;
	padding-top: 0px;
}
.about__cta:nth-child(2n) .about__cta__content {
	padding-left: 40px;
	padding-right: 0;
}
@media (max-width: 798px) {
	.about__cta:nth-child(2n) .about__cta__content {
		padding: 0;
	}
}
.about__cta__img-container {
	-ms-flex: 1;
	flex: 1;
}
@media (max-width: 798px) {
	.about__cta__img-container {
		display: none;
	}
}
.about__cta__img-container--mobile {
	display: none;
	-ms-flex: 1;
	flex: 1;
}
@media (max-width: 798px) {
	.about__cta__img-container--mobile {
		display: block;
	}
}
.about__cta__content {
	-ms-flex: 1;
	flex: 1;
	max-width: 400px;
	padding-right: 50px;
   font-family: 'wide';
 
}
@media (max-width: 798px) {
	.about__cta__content {
		margin-top: 20px;
		max-width: none;
	}
}
.about__cta__lead {
	display: block;
	font-family: 'wide';
	font-size: 10px;
	letter-spacing: 1.5px;
	line-height: 20px;
	margin-bottom: 5px;
	text-transform: uppercase;
}
.about__cta__title {
	max-width: 500px;
  	font-family: 'Graphik Wide Bold';
	font-size: 28px;
	line-height: 30px;
}
@media (max-width: 798px) {
	.about__cta__title {
		max-width: 400px;
	}
}
.about__cta__text {
	font-family: 'Graphik Regular';
	font-size: 14px;
	line-height: 20px;
	margin-bottom: 50px;
}
@media (max-width: 798px) {
	.about__cta__btn {
		display: block;
		width: 100%;
	}
}
.about__cta__btn.button--white,
.button.about__cta__btn {
	line-height: normal;
  	background: #fff;!important
  	font-family: 'Graphik Regular';
  	border: 1px solid transparent;
  	color: white;
  	font-size: 13px;
  	justify-content: center;
    -ms-flex-pack: center;
    transition: all 0.2s linear;
    -webkit-appearance: none;
    -webkit-font-smoothing: antialiased;
  	text-transform: uppercase;
  	padding: 10px 20px 10px 20px;
}
.about__cta__img {
	height: auto;
	max-width: 100%;
}
.about__cta__img--desktop {
	width: 100%;
}
@media (max-width: 798px) {
	.about__cta__img--desktop {
		display: none;
	}
}
.about__cta__img--mobile {
	display: none;
}
@media (max-width: 798px) {
	.about__cta__img--mobile {
		display: block;
	}
}
</style>
