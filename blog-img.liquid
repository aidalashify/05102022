{{ blog__img | newline_to_br }}


<div class="blog__img">
  {%- if section.settings.title !=blank -%}
  <h2 class="title-h2 blog__img__title">
    {{ section.settings.title }}
  </h2>
  {%- endif -%}
  <div class="blog__img__grid">
    {%- for block in section.blocks -%}
      <div class="img__block">
        <img class="img__block__img" src="{% assign shopify_cdn_url =  block.settings.image | img_url: 'master'  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="">
        <div class="img__block__header">
          <h3 class="title-h4 img__block__name">
            {{ block.settings.title }}
          </h3>
          {%- if block.settings.ig != blank -%}
            <a class="img__block__ig" href="{{ block.settings.ig }}" target="_blank">
              <img src="{% assign shopify_cdn_url =  'instagram.svg' | asset_url  %}{% include 'ips_url' src:shopify_cdn_url %}" alt="Instagram" style="width:24px; height:24px;">
            </a>
          {%- endif -%}
        </div>
        <span class="title-h5 img__block__span">
          {{ block.settings.span }}
        </span>
     
        {%- if block.settings.favourite != blank -%}
          {% assign favourite = all_products[block.settings.favourite] %}
          <a class="img__block__link link" href="{{ favourite.url }}" target="_blank">
              {% assign cta_title = block.settings.title | split: " " | first %}
            {{ cta_title }}'s favorite product
          </a>
        {%- endif -%}
      </div>
    
     <p class=" img__block__quote">
          {{ block.settings.body-text }}
        </p>
    
    {%- endfor -%}
  </div>
</div>

